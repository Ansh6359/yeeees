<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link rel="stylesheet" href="/stylesheets/contact.css"> <!-- link of contact.css -->
</head>

<body>
    <h1>Contact Me :</h1>
    <form action="/submit-form" method="post" onsubmit="showMessage(event)"> 
        <label for="name">Name:</label> <!-- user name box -->
        <input type="text" id="userName" name="name" required>
        <label for="email">Email:</label> <!-- user email box -->
        <input type="email" id="userEmail" name="email" required>
        <label for="message">Message:</label> <!-- user message box -->
        <textarea id="userMessage" name="message" rows="1" required></textarea>
        <button type="submit">Submit</button> <!-- Button -->
    </form>

    <div id="thankYouMsg" style="display: none;">
       <p> <h3>"Thank you for your message! I will reach you as soon as possible."</h3> </p>
    </div>
    <script>
        function showMessage(event) 
        {
            event.preventDefault();
            document.querySelector('form').style.display = 'none';  
            document.getElementById('thankYouMsg').style.display = 'block';
        }
    </script>
</body>

</html>
